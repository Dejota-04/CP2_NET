@model IEnumerable<CP2.Models.Produto>

@{
    ViewData["Title"] = "Gerenciar Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Produto</a>
</p>

<table class="table table-striped table-hover mt-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco_original)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Plataforma)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco_original)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Plataforma)
                </td>

                <td>
                    <genre-tag>@item.Categoria</genre-tag>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Produto_ID" class="btn btn-secondary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Produto_ID" class="btn btn-info btn-sm">Detalhes</a>

                    <form asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Produto_ID" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Tem certeza que deseja excluir o produto \'@item.Titulo\'?');">
                            Excluir
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>